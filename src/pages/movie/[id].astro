---
import MainLayout from '../../layouts/MainLayout.astro';
import movies from '../../data/movies.json';
import Rating from '../../components/Rating.astro';

export function getStaticPaths() {
  return movies.map(movie => ({
    params: { id: movie.id.toString() },
  }));
}

const { id } = Astro.params;
const movie = movies.find(m => m.id.toString() === id);

if (!movie) {
  return Astro.redirect('/');
}
---

<MainLayout title={movie.title}>
  
  <div class="movie-backdrop" style={`background-image: url(${movie.poster});`}></div>
  
  <a href="/" class="click-overlay" aria-label="Ana Sayfaya D√∂n"></a>

  <div class="movie-detail-container">
    
    <div class="poster-wrapper">
      <img src={movie.poster} alt={movie.title} class="main-poster" transition:name={`poster-${movie.id}`} />
    </div>

    <div class="info-wrapper">
      
      <h1 class="movie-title">{movie.title}</h1>
      
      <div class="meta-row">
        <span class="meta-tag year">üìÖ {movie.year || '2023'}</span>
        
        <span class="meta-tag">üé¨ {movie.category}</span>
        
        <span class="meta-tag duration">‚è± {movie.duration || '1sa 30dk'}</span>
        <span class="meta-tag imdb">‚≠ê {movie.rating}</span>
      </div>

      <div class="crew-section">
        <p><strong>Y√∂netmen:</strong> <span>{movie.director || 'Bilgi Yok'}</span></p>
        <p><strong>Oyuncular:</strong> <span>{movie.actors ? movie.actors.join(', ') : 'Bilgi Yok'}</span></p>
      </div>

      <div class="description-section">
        <h3>Film √ñzeti</h3>
        <p>{movie.description}</p>
      </div>

      <div class="action-buttons">
        <a href={movie.trailerUrl || "#"} target="_blank" class="btn-trailer">
          ‚ñ∂ Fragmanƒ± ƒ∞zle
        </a>

        <div class="rating-box">
             <Rating movieId={movie.id} />
        </div>
      </div>

    </div>
  </div>

</MainLayout>

<style>
  /* --- ARKA PLAN --- */
  .movie-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: blur(20px) brightness(0.4); 
    z-index: 0; 
  }

  /* --- GERƒ∞ D√ñNME Lƒ∞NKƒ∞ --- */
  .click-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, #111 10%, rgba(0,0,0,0.5) 100%);
    z-index: 1; 
    cursor: pointer; 
    display: block;
  }

  /* --- ƒ∞√áERƒ∞K KUTUSU --- */
  .movie-detail-container {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 50px;
    max-width: 1200px;
    margin: 60px auto;
    padding: 40px;
    color: white;
    min-height: 80vh;
    pointer-events: none; 
  }


  .poster-wrapper, 
  .info-wrapper {
    pointer-events: auto;
  }

  .poster-wrapper { flex-shrink: 0; }

  .main-poster {
    width: 350px;
    border-radius: 12px;
    box-shadow: 0 20px 50px rgba(0,0,0,0.8);
    border: 1px solid rgba(255,255,255,0.1);
  }

  .info-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
    padding-top: 10px;
  }

  .movie-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    line-height: 1.1;
    color: #fff;
    text-shadow: 0 2px 10px rgba(0,0,0,0.5);
  }

  .meta-row {
    display: flex;
    gap: 15px;
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 10px;
  }

  /* GENEL ETƒ∞KET TASARIMI */
  .meta-tag {
    background: rgba(255, 255, 255, 0.1);
    padding: 6px 14px;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(5px);
    display: flex;
    align-items: center;
    gap: 5px;
    color: white; 
  }

  .crew-section p { margin: 5px 0; color: #ccc; font-size: 1rem; }
  .crew-section strong { color: #fff; margin-right: 5px; }

  .description-section h3 { margin-bottom: 10px; color: #f59e0b; font-size: 1.2rem; }
  .description-section p { line-height: 1.6; color: #ddd; font-size: 1.05rem; max-width: 800px; }

  .action-buttons {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-top: 20px;
    flex-wrap: wrap;
    pointer-events: auto;
  }

  .btn-trailer {
    background-color: transparent;
    border: 2px solid white;
    color: white;
    padding: 10px 25px;
    height: 48px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: bold;
    font-size: 1rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    gap: 8px;
  }

  .btn-trailer:hover {
    background-color: white;
    color: black;
    transform: scale(1.05);
  }

  @media (max-width: 900px) {
    .movie-detail-container {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 20px;
      margin-top: 20px;
    }
    .main-poster { width: 250px; margin-bottom: 20px; }
    .meta-row { flex-wrap: wrap; justify-content: center; }
    .action-buttons { justify-content: center; }
  }
</style>